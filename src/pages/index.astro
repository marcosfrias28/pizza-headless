---
import Vector from "../../public/Vector.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Pizza Headless.">
	<main class="w-full relative">
		<section
			id="hero-section"
			class="w-full md:w-max flex flex-row flex-wrap justify-between mx-auto mt-14"
		>
			<div class="max-w-2xl">
				<small class="text-2xl font-pattaya text-bright-sun-300"
					>Based in Italy</small
				>
				<h1 class="flex flex-col text-[65px] font-bold">
					<span>Artisan Pizzas,</span>
					<span>Crafted with Care</span>
				</h1>
				<p class="text-[16px]">
					Lorem ipsum dolor sit amet, consectetur adipiscing elit.
					Morbi eu cursus nisi. Nunc consectetur ipsum pharetra,
					congue odio quis, porttitor ligula. Vestibulum viverra.
				</p>
				<button
					class="rounded-lg px-7 py-3 bg-bright-sun-400 text-white mt-8 font-semibold shadow-lg hover:scale-105 transition-all duration-300 cursor-pointer"
					>Check the menu</button
				>
			</div>
			<picture>
				<img
					src="/pizzaexample.webp"
					alt="Pizza Margherita with Basilic and Tomato Sauce"
				/>
			</picture>
		</section>
